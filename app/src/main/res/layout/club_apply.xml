<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/club_apply_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="동아리 신청"
            android:textSize="18dp"
            android:textColor="#CC000000"/>
        <TextView
            android:id="@+id/club_apply_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="(동아리 이름)"
            android:textSize="20dp"
            android:textColor="#3F51B5"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cameraProfile"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/club_profile_frame"

            />
        <android.widget.Button
            android:id="@+id/btnCamera"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/club_profile_drawing1"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="-50dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clubApplyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"></androidx.recyclerview.widget.RecyclerView>

    <android.widget.Button
        android:id="@+id/btnClubApplyEnter"
        android:layout_width="192dp"
        android:layout_height="88dp"
        android:paddingBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-20dp"
        android:text="입력 완료"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/club_apply_button" />
</LinearLayout>