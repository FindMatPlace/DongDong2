<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/rounded_corner_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddlgustjr"
            android:textSize="16sp"
            />
            <TextView
                android:id="@+id/iv_role"
                android:text="ehddkflghlwkd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="3"
                android:text="ddfdfdfdfdfdffdflfdl\ngjdfghjkdjnfjdnkfjdkfj\nkfnkdnjvkfdnvkdjvkdfnvkdnvkfdjnvkdnv"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_foreground"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_button"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                android:id="@+id/iv_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                />
                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.5k"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintStart_toEndOf="@id/iv_like"
                    app:layout_constraintEnd_toStartOf="@+id/iv_comment"
                    app:layout_constraintTop_toTopOf="@id/iv_like"
                    app:layout_constraintBottom_toBottomOf="@id/iv_like"
                    />
                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toEndOf="@id/tv_like"
                    app:layout_constraintEnd_toStartOf="@id/tv_comment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.5k"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"

                    app:layout_constraintStart_toEndOf="@id/iv_comment"
                    app:layout_constraintEnd_toStartOf="@+id/iv_look"
                    app:layout_constraintTop_toTopOf="@id/iv_comment"
                    app:layout_constraintBottom_toBottomOf="@id/iv_comment"
                    />
                <ImageView
                    android:id="@+id/iv_look"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toEndOf="@id/tv_comment"
                    app:layout_constraintEnd_toStartOf="@id/tv_look"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.5k"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/iv_look"
                    app:layout_constraintTop_toTopOf="@id/iv_look"
                    app:layout_constraintBottom_toBottomOf="@id/iv_look"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>