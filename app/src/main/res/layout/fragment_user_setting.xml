<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingpage"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="184dp"
        android:layout_height="215dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/text_userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/setting_profile" />

    <TextView
        android:id="@+id/text_userName"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_change_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_change_password"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/changepassword"
        android:contentDescription="비번바꾸기"
        android:text="change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_userInfo"
        android:layout_width="347dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/about"
        android:contentDescription="정보"
        android:text="about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_change_password" />

    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="347dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/logout"
        android:contentDescription="로그아웃"
        android:text="logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_userInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>
